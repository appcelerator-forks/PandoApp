function event_touch(e){e.addEventListener("touchstart",function(e){current_point={x:e.x,y:e.y}}),e.addEventListener("touchmove",function(e){var t=(e.x-current_point.x)/100;e.x-current_point.x<0?(yes_no=-.5>t?"yes":"",$.left_button_indicator.setOpacity(-t)):(t>.5&&(yes_no="no"),$.right_button_indicator.setOpacity(t))}),e.addEventListener("touchend",function(){var e=new Date,t=Math.floor(e.getTime()/1e3);"yes"==yes_no?(lives-=1,Ti.App.Properties.setString("lives",lives),$.lives_bar.image=lives_bar[lives],estimate_time=t>estimate_time?parseInt(t)+waiting_time:parseInt(estimate_time)+waiting_time,Ti.App.Properties.setString("estimate_time",estimate_time),timer(1),animation("left",this),sound_yes.play(),refreshLife(),item.insetItem()):"no"==yes_no?(animation("right",this),sound_no.play(),item.insetItem()):($.left_button_indicator.setOpacity(0),$.right_button_indicator.setOpacity(0)),yes_no=""})}