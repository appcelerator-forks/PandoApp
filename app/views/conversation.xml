<Alloy>
	<Window class="container" barColor="#75d0cb" id="win" title="Chatroom" navBarHidden="false">
		<RightNavButton title="Code" onClick="onQRCode"></RightNavButton>
	<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
	<ScrollView class="wfill hfill" contentHeight="Ti.UI.FILL" contentWidth="Ti.UI.FILL">
	<ScrollView id="chatroom" class="wfill hfill vert" bottom="50" contentHeight="Ti.UI.SIZE" contentWidth="Ti.UI.FILL">
    	<View class="wfill hsize">
        	<View class="wsize hsize vert padding">
	        	<Label id="f_name" class="h3 wsize hsize"></Label>
        	</View>
    	</View>
    	<View class="wfill hsize box vert padding" top="0">
	    	<View class="wfill hsize padding vert" bottom="0" backgroundColor="#F2F4F5" id="item_box">
	    		
	    	</View>
	    	<View id="inner_box" class="wfill hsize vert" top="0" backgroundColor="#e5e5e5">
	    		<ImageView image="/images/shadow.png" class="wfill hsize"></ImageView>
			</View>
		</View>
    </ScrollView>
    <View backgroundColor="white" class="wfill horz hsize" bottom="0">
    	<TextField id="message" top="10" bottom="10" width="70%"></TextField>
    	<Button class="small_button" height="40" width="60" right="10" onClick="SendMessage">Send</Button>
    </View>
    </ScrollView>
    </Window>
</Alloy>