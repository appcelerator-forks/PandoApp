<Alloy>
	<Window class="container vert" barColor="#75d0cb" id="win" title="Waiting List" navBarHidden="false">
	<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
    	<View class="wfill hsize box padding vert" top="0" bottom="0" backgroundColor="#F2F4F5">
    		<View class="hsize wfill horz">
        		<ImageView id="img_path" class="" left="10" top="10" width="60" height="auto" image=""></ImageView>
        		<View class="hsize vert padding" width="70%">
        			<Label id="label_field_1" class="h5 wfill hsize bold" textAlign="left"></Label>
        			<Label id="label_field_2" class="h5 wfill hsize"></Label>
        		</View>
    		</View>
    		<View id="indicator" class="wfill hsize">
    			<Label class="wsize" id="label_no_more" >No user</Label>
    			<View id="item_container" left="10" top="10" right="10" class="hsize wfill">
        			<!--<ImageView zIndex="1" id="item_2" class="wfill" height="auto" image="/images/demo_item.png"></ImageView>-->
    			</View>
    		</View>
    		<View id="left_right_button" class="wfill hsize padding">
    		</View>
    	</View>
    	<ImageView image="/images/shadow.png" class="wfill hsize padding" top="0"></ImageView>
    </Window>
</Alloy>